# ========================================
# Django Settings
# ========================================
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Database (Production)
# ========================================
# Para desenvolvimento, SQLite é usado por padrão
# Para produção, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/bibpay

# ========================================
# Payment Gateways
# ========================================
PAGARME_API_KEY=your-pagarme-key
SGPWEB_API_KEY=your-sgpweb-key

# ========================================
# WhatsApp Integration (Evolution API)
# ========================================
# URL do servidor Evolution API (no código: URL_SERVE)
EVOLUTION_API_URL=http://localhost:8080

# Chave de API global (no código: API_KEY)
EVOLUTION_API_KEY=your-evolution-key

# ID da instância WhatsApp configurada na Evolution API
EVOLUTION_INSTANCE_ID=your-instance-id

# Token da instância (gerado na Evolution API)
EVOLUTION_INSTANCE_TOKEN=your-instance-token

# ========================================
# Celery / Redis (Task Queue)
# ========================================
# URL do Redis para Celery (no Docker: redis://redis:6379/0)
CELERY_BROKER_URL=redis://localhost:6379/0

# ========================================
# Email (Gmail para testes)
# ========================================
# Para usar Gmail, ative "Senhas de App" na sua conta Google
# https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
DEFAULT_FROM_EMAIL=BibPay <seu-email@gmail.com>

# Email da contabilidade (para receber relatórios)
ACCOUNTANT_EMAIL=contabilidade@empresa.com

# ========================================
# CORS (se necessário para frontend separado)
# ========================================
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
